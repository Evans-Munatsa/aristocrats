<div class="container">
	<form action="/patients/add" method="POST"  class="form-signin">
		<h1>Add Patient</h1>
		<input type="text" name="first_name" value="{{first_name}}" id="first_name" placeholder="first_name" class="form-control" required="" autofocus="">

		<input type="text" name="surname" value="{{surname}}" id="surname" placeholder="surname" class="form-control" required="" autofocus="">

		<input type="text" name="id_no" value="{{id_no}}" id="id_no" placeholder="id_no" class="form-control" required="" autofocus="">

		<input type="text" name="mobile_no" value="{{mobile_no}}" id="mobile_no" placeholder="mobile_no" class="form-control" required="" autofocus="">

		<input type="text" name="email" value="{{email}}" id="email" placeholder="email" class="form-control" required="" autofocus="">

		<input type="text" name="physical_address" value="{{physical_address}}" id="physical_address" placeholder="physical_address" class="form-control" required="" autofocus="">

		<input type="text" name="doc_id" value="{{doc_id}}" id="doc_id" placeholder="doc_id" class="form-control" required="" autofocus="">
		<button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
	</form>
</div>

